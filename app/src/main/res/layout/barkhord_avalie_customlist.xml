<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/altdlg_bg"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layoutDirection="rtl">
        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftEdgeSwipeOffset="0dp"
            app:rightEdgeSwipeOffset="0dp">

            <LinearLayout
                android:id="@+id/layRight"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@color/colorDivider"
                android:gravity="center"
                android:tag="Bottom3"
                android:weightSum="10">

                    <ImageView
                        android:layout_width="@dimen/iconSize64"
                        android:layout_height="@dimen/iconSize64"
                        android:layout_gravity="center"
                        android:layoutDirection="rtl"
                        android:id="@+id/imgDelete"
                        android:src="@drawable/ic_delete"
                   />



            </LinearLayout>



<LinearLayout
    android:orientation="horizontal"
    android:weightSum="20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

            <LinearLayout
                android:layout_weight="18"
                android:id="@+id/linDetails"
                android:layout_toLeftOf="@id/ImgFavorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDate"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/FontSize16" />

                <TextView
                    android:id="@+id/lblMessageContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/FontSize16" />
            </LinearLayout>
    <LinearLayout
        android:id="@+id/LinFavorite"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"

        >

        <ImageView
            android:id="@+id/ImgFavorite"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_favorite_satr"
            android:visibility="visible" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchFavorite"
            android:rotation="90"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:checked="false"
            android:theme="@style/My.Widget.Switch"            />
    </LinearLayout>


</LinearLayout>


        </com.daimajia.swipe.SwipeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>