                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/minus_red" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/text_zarib_forosh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_view_title"
                    android:text="ضریب فروش: 5"/>
                <ImageView
                    android:id="@+id/trash_iv"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:elevation="@dimen/_24sdp"
                    android:src="@drawable/ic_trash_2" />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_purchase"
            android:layout_width="@dimen/_144sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_purchase_red_dark_gradiant"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
