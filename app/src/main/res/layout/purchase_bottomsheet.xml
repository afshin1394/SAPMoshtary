<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lnrlayRoot"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_gravity="bottom"
    android:elevation="@dimen/_12sdp"
    android:layoutDirection="rtl"
    android:background="@drawable/btmsheet_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        android:background="@drawable/btmsheet_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin_purchaseCount"
                android:layout_width="@dimen/_144sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:elevation="@dimen/_4sdp"
                android:background="@drawable/purchase_count_shape"
                 >
                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:id="@+id/add_to_cart"
                    android:src="@drawable/add_product"
                    android:padding="@dimen/_4sdp"
                    android:layout_margin="@dimen/_12sdp"
                    />
                <com.saphamrah.customer.utils.customViews.EditTextWatcher
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center|top"
                    android:inputType="number"
                    android:padding="@dimen/_6sdp"
                    android:gravity="center|top"
                    android:id="@+id/TV_count"
                    android:textSize="@dimen/_12sdp"
                    android:text="10"/>

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:id="@+id/remove_from_cart"
                    android:src="@drawable/sharp_remove_black_36"
                    android:layout_margin="@dimen/_12sdp"
                    />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_purchase"
                android:layout_width="@dimen/_144sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/purchase_shape"
                android:padding="@dimen/_4sdp"
                android:visibility="visible"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="افزودن به سبد خرید"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <TextView
                android:id="@+id/consumerPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:text="3000 ریال" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
