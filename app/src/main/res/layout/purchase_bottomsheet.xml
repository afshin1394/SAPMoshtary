<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_bottom_sheet"
    app:behavior_hideable="false"
    android:maxHeight="@dimen/_570sdp"
    android:elevation="@dimen/_12sdp"
    android:background="@drawable/rounded_corner_top_red_gradiant"
    android:layoutDirection="rtl"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_product_name"
            style="@style/text_view_title_center"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="بستنی ماستی" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_txt_consumer_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:visibility="visible"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EBE4A9A9"
                >

                <TextView
                    android:id="@+id/txt_consumer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:text="هزینه پرداختی: 2000ریال" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
           >

            <LinearLayout
                android:id="@+id/lin_purchaseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="@dimen/_144sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/rounded_corner_background"
                    android:elevation="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/add_to_cart"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/add_product" />

                    <com.saphamrah.customer.utils.customViews.EditTextWatcher
                        android:id="@+id/TV_count"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:gravity="center|top"
                        android:inputType="number"
                        android:padding="@dimen/_6sdp"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/remove_from_cart"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:src="@drawable/sharp_remove_black_36" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/trash_iv"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_24sdp"
                    android:src="@drawable/ic_trash_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_purchase"
                android:layout_width="@dimen/_144sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner_purchase_red_dark_gradiant"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="افزودن به سبد خرید"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>
        </FrameLayout>


        <LinearLayout
        android:id="@+id/lin_details_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="end">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey500"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/brand_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">


                        <TextView
                            android:text="نام برند"
                            style="@style/text_view_title"/>

                        <TextView
                            android:id="@+id/brand_tv"
                            android:text="پاندا"
                            style="@style/text_view_item"/>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey500"
                    />

                <LinearLayout
                    android:id="@+id/bach_number_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:text="شماره بچ"
                        style="@style/text_view_title"/>

                    <TextView
                        android:id="@+id/bach_number_tv"
                        android:text="524985237"
                        style="@style/text_view_item"/>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey500"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/production_date_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">


                    <TextView
                        android:text="تاریخ تولید"
                        style="@style/text_view_title"/>

                    <TextView
                        android:id="@+id/production_date_tv"
                        android:text="1401/9/10"
                        android:textDirection="rtl"
                        style="@style/text_view_item"/>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey500"
                    />

                <LinearLayout
                    android:id="@+id/expiration_date_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:text="تاریخ انقضا"
                        style="@style/text_view_title"/>

                    <TextView
                        android:id="@+id/expiration_date_tv"
                        android:text="1401/11/10"
                        android:textDirection="rtl"
                        style="@style/text_view_item"/>


                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey500"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/weight_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">


                    <TextView
                        android:text="وزن خالص"
                        style="@style/text_view_title"/>

                    <TextView
                        android:id="@+id/weight_tv"
                        android:text="2250 گرم"
                        style="@style/text_view_item"/>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey500"
                    />

                <LinearLayout
                    android:id="@+id/number_in_box_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:text="تعداد در کارتن"
                        style="@style/text_view_title"/>

                    <TextView
                        android:id="@+id/number_in_box_tv"
                        android:text="2 عدد"
                        style="@style/text_view_item"/>


                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey500"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

