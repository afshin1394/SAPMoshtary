<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_bottom_sheet"
    app:behavior_hideable="false"
    android:maxHeight="@dimen/_570sdp"
    android:elevation="@dimen/_12sdp"
    android:layoutDirection="rtl"
    android:background="@drawable/rounded_corner_top_red_gradiant"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lin_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:maxWidth="300dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:text="سس کچاپ دلپذیر 709 گرم" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_txt_consumer_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/_30sdp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="#EBE4A9A9"
                >

                <TextView
                    android:id="@+id/txt_consumer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:text="مبلغ سفارش: 2000ریال" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>





    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lin_purchaseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:elevation="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/lin_carton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layoutDirection="rtl"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tv_add_carton"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/plus_green" />



                            <com.saphamrah.customer.utils.customViews.EditTextWatcher
                                android:id="@+id/tv_quantity_carton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="@string/carton"
                                android:textStyle="bold"
                                android:text="100"
                                android:gravity="center"
                                style="@style/text_view_title_right"
                                />
                            <ImageView
                                android:id="@+id/tv_remove_carton"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/minus_red" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linBasteh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layoutDirection="rtl"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tv_add_basteh"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/plus_green" />



                            <com.saphamrah.customer.utils.customViews.EditTextWatcher
                                android:id="@+id/tv_quantity_basteh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="@string/carton"
                                android:textStyle="bold"
                                android:text="100"
                                android:gravity="center"
                                style="@style/text_view_title_right"
                                />
                            <ImageView
                                android:id="@+id/tv_remove_basteh"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/minus_red" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lin_adad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layoutDirection="rtl"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tv_add_adad"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/plus_green" />



                            <com.saphamrah.customer.utils.customViews.EditTextWatcher
