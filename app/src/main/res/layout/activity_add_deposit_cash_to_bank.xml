<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MVP.View.AddDepositCashToBankActivity"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layTitle"
        android:layoutDirection="rtl"
        android:background="@color/colorPrimary"
        android:padding="@dimen/paddingTitle"
        android:elevation="@dimen/elevationActivityTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:layout_width="@dimen/imgActivityTitle"
            android:layout_height="@dimen/imgActivityTitle"
            android:id="@+id/imgBack"
            android:src="@drawable/ic_back"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblActivityTitle"
            android:text="@string/depositCashToBank"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/lblActivityTitle"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layTitle"
        app:layout_constraintBottom_toTopOf="@id/btnApply">
        <com.saphamrah.CustomView.CustomTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtinputDate"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:theme="@style/TextInputLayoutTheme">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDate"
                android:drawableLeft="@drawable/ic_arrow_down"
                android:drawablePadding="@dimen/drawableRightEditTextPadding"
                android:editable="false"
                android:hint="@string/date"
                android:textColorHint="@color/colorDivider"
                android:textSize="@dimen/FontSize16"
                android:textColor="@color/colorTextPrimary"
                android:inputType="none"
                android:maxLines="1" />
        </com.saphamrah.CustomView.CustomTextInputLayout>

        <com.saphamrah.CustomView.CustomTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtinputTafkik"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:theme="@style/TextInputLayoutTheme">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTafkik"
                android:drawableLeft="@drawable/ic_arrow_down"
                android:drawablePadding="@dimen/drawableRightEditTextPadding"
                android:editable="false"
                android:hint="@string/tafkik"
                android:textColorHint="@color/colorDivider"
                android:textSize="@dimen/FontSize16"
                android:textColor="@color/colorTextPrimary"
                android:inputType="none"
                android:maxLines="1" />
        </com.saphamrah.CustomView.CustomTextInputLayout>

        <com.saphamrah.CustomView.CustomTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtinputNumber"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:theme="@style/TextInputLayoutTheme">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNumber"
                android:drawablePadding="@dimen/drawableRightEditTextPadding"
                android:hint="@string/number"
                android:textColorHint="@color/colorDivider"
                android:textSize="@dimen/FontSize16"
                android:textColor="@color/colorTextPrimary"
                android:inputType="number"
                android:maxLines="1" />
        </com.saphamrah.CustomView.CustomTextInputLayout>

        <com.saphamrah.CustomView.CustomTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtinputHesab"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:theme="@style/TextInputLayoutTheme">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtHesab"
                android:drawableLeft="@drawable/ic_arrow_down"
                android:drawablePadding="@dimen/drawableRightEditTextPadding"
                android:editable="false"
                android:hint="@string/hesab"
                android:textColorHint="@color/colorDivider"
                android:textSize="@dimen/FontSize16"
                android:textColor="@color/colorTextPrimary"
                android:inputType="none"
                android:maxLines="1" />
        </com.saphamrah.CustomView.CustomTextInputLayout>

        <com.saphamrah.CustomView.CustomTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtinputPrice"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:theme="@style/TextInputLayoutTheme">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPrice"
                android:drawablePadding="@dimen/drawableRightEditTextPadding"
                android:hint="@string/costRial"
                android:textColorHint="@color/colorDivider"
                android:textSize="@dimen/FontSize16"
                android:textColor="@color/colorTextPrimary"
                android:inputType="none"
                android:maxLines="1"
                android:editable="false"/>
        </com.saphamrah.CustomView.CustomTextInputLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnApply"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/apply"
        android:textSize="@dimen/btnFontMain"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/altdlgButtonPadding"
        android:background="@drawable/btn_bg"
        android:layoutDirection="rtl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>