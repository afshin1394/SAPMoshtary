<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/altdlgCorner"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_layout_help">
        <androidx.core.widget.NestedScrollView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:id="@+id/layColor">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/colorBestankari"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bestankari_circle"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/txtBestankari"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/colorBestankari"
                    app:layout_constraintTop_toTopOf="@+id/colorBestankari"
                    app:layout_constraintBottom_toBottomOf="@+id/colorBestankari"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/bestankari"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:id="@+id/colorResid"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/colorBestankari"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/resid_circle"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/txtResid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/colorResid"
                    app:layout_constraintTop_toTopOf="@+id/colorResid"
                    app:layout_constraintBottom_toBottomOf="@+id/colorResid"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/resid"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:id="@+id/colorMarjoeeKamel"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/colorResid"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/marjoee_kamel_circle"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/txtMarjoeeKamel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/colorMarjoeeKamel"
                    app:layout_constraintTop_toTopOf="@+id/colorMarjoeeKamel"
                    app:layout_constraintBottom_toBottomOf="@+id/colorMarjoeeKamel"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/marjoeeKoli"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:id="@+id/colorTasvieKamel"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtMarjoeeKamel"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/tasvie_kamel_circle"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/txtTasvieKamel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/colorTasvieKamel"
                    app:layout_constraintTop_toTopOf="@+id/colorTasvieKamel"
                    app:layout_constraintBottom_toBottomOf="@+id/colorTasvieKamel"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/tasvieKamel"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:id="@+id/colorMandehDar"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/colorTasvieKamel"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/mandehdar_circle"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/txtMandehDar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/colorMandehDar"
                    app:layout_constraintTop_toTopOf="@+id/colorMandehDar"
                    app:layout_constraintBottom_toBottomOf="@+id/colorMandehDar"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/mandehDar"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />




            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layColor"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/alert_btn_bg_accent"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layoutDirection="rtl"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnOk"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/btnOk"
                android:textSize="@dimen/btnFontMain"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/altdlgButtonPadding"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.cardview.widget.CardView>