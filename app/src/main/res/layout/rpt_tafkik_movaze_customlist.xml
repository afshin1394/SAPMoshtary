<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layRoot"
    android:layoutDirection="rtl">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:id="@+id/lblKalaCode"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:id="@+id/lblNameKala"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:id="@+id/lblTedadDarCarton"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:id="@+id/lblTedadDarBaste"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:id="@+id/lblTedadDarAdad"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lblVazn"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lblHajm"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:padding="5dp"/>

</LinearLayout>