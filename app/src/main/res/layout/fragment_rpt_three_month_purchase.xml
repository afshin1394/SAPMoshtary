<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layTableTitle"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/layTitle">
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/lblRadif"
            android:text="@string/radif"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/lblCustomerCode"
            android:text="@string/customerCode"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/lblCustomerName"
            android:text="@string/customerName"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/lblTedadFaktor"
            android:text="@string/tedadFaktor"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/lblMablaghFaktor"
            android:text="@string/sumMablagh"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"
        android:layoutDirection="rtl"
        android:layout_marginBottom="10dp"
        android:paddingBottom="75dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/layTableTitle"
        app:layout_constraintBottom_toTopOf="@+id/layTableFooter"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layTableFooter"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorListHeaderBackground"
        android:layout_alignParentBottom="true"
        android:layoutDirection="rtl">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lblSumMablaghFaktor"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/lblSumTedadFaktor"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:padding="5dp"/>
    </LinearLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/fabMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="@color/colorFabMenu"
        fab:menu_colorPressed="@color/colorFabMenuClick"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/ic_menu"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_textColor="@color/colorTextPrimary"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_colorNormal="@color/colorWhite"
        fab:menu_labels_colorPressed="@color/colorWhite"
        fab:menu_labels_colorRipple="@color/colorWhite"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="right"
        fab:menu_openDirection="up"
        fab:menu_labels_customFont="@string/fontPath"
        fab:menu_backgroundColor="@android:color/transparent">
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabRefresh"
            android:src="@drawable/ic_refresh"
            fab:fab_size="normal"
            fab:fab_label="@string/refresh"
            fab:fab_colorNormal="@color/colorFabRefresh"
            fab:fab_colorPressed="@color/colorFabRefreshClick"/>
    </com.github.clans.fab.FloatingActionMenu>


</androidx.constraintlayout.widget.ConstraintLayout>