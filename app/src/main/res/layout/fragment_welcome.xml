<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center|top"
    android:background="@drawable/bg_gradient"
    tools:context=".presentation.view.fragments.main.WelcomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/moshtary_name_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:elevation="15dp"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_gradient_gray"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="علی ولی پور"
                android:textColor="@color/colorBlack"
                android:textSize="22dp"
                android:fontFamily="@font/iransans"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="654897132654"
                android:textColor="@color/colorBlack"
                android:textSize="22dp"
                android:fontFamily="@font/iransans"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/ads_cardview"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:cardCornerRadius="25dp"
        android:layout_below="@+id/moshtary_name_cardview"
        android:background="@null"
        android:elevation="15dp"
        android:layout_margin="15dp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/moshtary_name_cardview" />


    </androidx.cardview.widget.CardView>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/ads_cardview"
        android:layout_marginTop="-50dp"
        android:elevation="17dp"
        android:scaleX="2"
        android:scaleY="2"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/colorWhite" />
</RelativeLayout>