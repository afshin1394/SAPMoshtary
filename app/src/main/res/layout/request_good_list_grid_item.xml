<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="10dp">

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipeGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:leftEdgeSwipeOffset="0dp"
            app:rightEdgeSwipeOffset="0dp">


            <LinearLayout
                android:id="@+id/layRightGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="12">

                <!-- layout will be added when show in details on item select-->
            </LinearLayout>

            <com.saphamrah.CustomView.CustomScrollView
                android:id="@+id/layLeftGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fadeScrollbars="false"
                android:layoutDirection="rtl"
                android:scrollbarAlwaysDrawHorizontalTrack="true">

                <!-- layout will be added when show in details on item select-->


            </com.saphamrah.CustomView.CustomScrollView>


            <LinearLayout
                android:id="@+id/layTopGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="20">


                <LinearLayout
                    android:id="@+id/layImageKalaAsasi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgKalaAsasi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/ic_add_goods"
                        android:visibility="gone"


                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:scaleType="fitCenter"
                    android:src="@drawable/nopic_whit"
                    android:weightSum="20">

                    <ImageView
                        android:id="@+id/arrow_left_side"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_arrow_left_side"
                        android:visibility="invisible"

                        />


                    <ImageView
                        android:id="@+id/imgKalaGrid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="18"
                        android:scaleType="fitCenter"
                        android:src="@drawable/nopic_whit" />

                    <ImageView
                        android:id="@+id/arrow_right_side"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_arrow_right_side"
                        android:visibility="invisible"

                        />
                </LinearLayout>
                <!--                    android:layout_below="@+id/layImageKalaAsasi"-->
                <!--                    android:layout_above="@+id/layNameCodeKala"-->
                <LinearLayout
                    android:id="@+id/layNameCodeKala"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lblNameCodeKalaMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/lblCountMain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_round_orange"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_1sdp"
                        android:paddingRight="@dimen/_1sdp"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/_8sdp" />


                    <TextView
                        android:id="@+id/lblShomareBachMain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_round_green"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_1sdp"
                        android:paddingRight="@dimen/_1sdp"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/layGheymatBatchMain"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView

                        android:id="@+id/lblGheymatForoshMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/rect_round_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_2sdp"
                        android:paddingRight="@dimen/_2sdp"
                        android:text=""
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/_8sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.9"


                        />


                </LinearLayout>


            </LinearLayout>


        </com.daimajia.swipe.SwipeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>