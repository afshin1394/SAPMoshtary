<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layRootAltdlg"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/altdlg_bg"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">

    <it.sephiroth.android.library.viewrevealanimator.ViewRevealAnimator
        android:layout_centerHorizontal="true"
        android:id="@+id/animator"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:animationDuration="@android:integer/config_longAnimTime"
        app:vra_hideBeforeReveal="true"
        android:measureAllChildren="true"
        android:animateFirstView="true"
        android:outAnimation="@anim/out_animation"
        android:inAnimation="@anim/in_animation"
        android:interpolator="@android:interpolator/accelerate_decelerate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/recycler_view"
                android:scrollbars="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp">
            </androidx.recyclerview.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/progressBarHeight"
                    android:id="@+id/progress"
                    android:max="100"
                    style="@style/CustomProgressBarHorizontal"
                    android:progress="0"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/progressBarHeight"
                    android:id="@+id/lblProgressPercentage"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/FontSize16"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/progressBarHeight"
                android:id="@+id/lblItemCounter"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize18"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/iconSize100"
                android:layout_height="@dimen/iconSize100"
                android:id="@+id/layResultImage"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp">
                <com.sackcentury.shinebuttonlib.ShineButton
                    android:layout_width="@dimen/iconSize100"
                    android:layout_height="@dimen/iconSize100"
                    android:id="@+id/shineBtnGetProgramResultFailed"
                    android:src="@android:color/darker_gray"
                    app:btn_color="@android:color/darker_gray"
                    app:btn_fill_color="@color/colorBtnFillColorFailed"
                    app:allow_random_color="false"
                    app:enable_flashing="false"
                    app:big_shine_color="@color/colorBigShineFailed"
                    app:click_animation_duration="200"
                    app:shine_animation_duration="2000"
                    app:shine_turn_angle="10"
                    app:small_shine_offset_angle="20"
                    app:small_shine_color="@color/colorSmallShineFailed"
                    app:shine_count="8"
                    app:siShape="@drawable/ic_cancel"
                    android:visibility="gone" />
                <com.sackcentury.shinebuttonlib.ShineButton
                    android:layout_width="@dimen/iconSize100"
                    android:layout_height="@dimen/iconSize100"
                    android:id="@+id/shineBtnGetProgramResultSuccess"
                    android:src="@android:color/darker_gray"
                    app:btn_color="@android:color/darker_gray"
                    app:btn_fill_color="@color/colorBtnFillColorSuccess"
                    app:allow_random_color="true"
                    app:enable_flashing="true"
                    app:click_animation_duration="200"
                    app:shine_animation_duration="2000"
                    app:shine_turn_angle="10"
                    app:small_shine_offset_angle="20"
                    app:shine_count="8"
                    app:siShape="@drawable/ic_check_mark"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lblStatus"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize24"
                android:gravity="center"
                android:layout_below="@+id/layResultImage"
                android:layout_above="@+id/btnApply"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnApply"
                android:gravity="center"
                android:text="@string/apply"
                android:textSize="@dimen/btnFontMain"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/altdlgButtonPadding"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/alert_btn_bg_accent"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </it.sephiroth.android.library.viewrevealanimator.ViewRevealAnimator>

</LinearLayout>