<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/altdlgCorner"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_layout_help">
        <androidx.core.widget.NestedScrollView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:id="@+id/layColor">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >



                <TextView
                    android:id="@+id/detailsTakhfifNaghdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/takhfifNaghdi"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/txtTakhfifNaghdi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@+id/detailsDarsadSoudMaghazeh"
                    app:layout_constraintTop_toTopOf="@+id/detailsTakhfifNaghdi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />


                <TextView
                    android:id="@+id/detailsTakhfifHajmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTakhfifNaghdi"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/takhfifHajmi"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/txtTakhfifHajmi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@id/detailsDarsadSoudMaghazeh"
                    app:layout_constraintTop_toTopOf="@+id/detailsTakhfifHajmi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"

                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />


                <TextView
                    android:id="@+id/detailsMablaghJayezeh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailsTakhfifHajmi"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/mablaghJayezeh"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/txtMablaghJayezeh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@id/detailsDarsadSoudMaghazeh"
                    app:layout_constraintTop_toTopOf="@+id/detailsMablaghJayezeh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />


                <TextView
                    android:id="@+id/detailsHashieySoudKala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailsMablaghJayezeh"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/hashiehSoudKala"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/txtHashieySoudKala"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@id/detailsDarsadSoudMaghazeh"
                    app:layout_constraintTop_toTopOf="@+id/detailsHashieySoudKala"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />


                <TextView
                    android:id="@+id/detailsJamSoudMaghazeh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailsHashieySoudKala"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/jamSoudMaghazeh"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/txtJamSoudMaghazeh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@id/detailsDarsadSoudMaghazeh"
                    app:layout_constraintTop_toTopOf="@+id/detailsJamSoudMaghazeh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/detailsDarsadSoudMaghazeh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailsJamSoudMaghazeh"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/darsadSoudMaghazeh"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/txtDarsadSoudMaghazeh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@id/detailsDarsadSoudMaghazeh"
                    app:layout_constraintTop_toTopOf="@+id/detailsDarsadSoudMaghazeh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layColor"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/alert_btn_bg_accent"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layoutDirection="rtl"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnOk"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/btnOk"
                android:textSize="@dimen/btnFontMain"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/altdlgButtonPadding"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.cardview.widget.CardView>