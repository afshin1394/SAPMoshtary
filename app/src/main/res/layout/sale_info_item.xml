<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_2sdp"
    android:gravity="center|top"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    tools:context=".presentation.profile.personalInfo.view.PersonalInfoFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:strokeColor="@color/colorAmber400"
        app:strokeWidth="1dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|top"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/colorAmber100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_sazmanforosh"
                    android:layout_width="@dimen/marginSize10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:textSize="17dp"
                    android:textColor="@color/colorGrey800"
                    android:fontFamily="@font/iransans"
                    android:text="پخش پگاه"
                    android:layout_marginEnd="6dp"
                    android:textDirection="rtl"
                    android:gravity="start"
                    android:layout_gravity="end"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="@color/colorGrey600"
                    android:fontFamily="@font/iransans"
                    android:text=" سازمان:"
                    android:layout_marginEnd="6dp"
                    android:paddingStart="5dp"
                    android:gravity="end"
                    android:layout_gravity="end"/>




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey500"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/daraje_moshtary_ll"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:paddingTop="17dp"
                        android:paddingBottom="17dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_arrow_back_ios_24"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textColor="@color/colorGrey600"
                                android:fontFamily="@font/iransans"
                                android:text="@string/daraje"
                                android:layout_marginEnd="6dp"
                                android:gravity="center"
                                android:layout_gravity="end"/>

                            <TextView
                                android:id="@+id/daraje_moshtary_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="16dp"
                                android:textColor="@color/colorGrey800"
                                android:fontFamily="@font/iransans"
                                android:text="درجه 4"
                                android:layout_marginEnd="6dp"
                                android:textDirection="rtl"
                                android:gravity="center"
                                android:layout_gravity="end"/>


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrey500"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noe_faaliat_ll"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorGrey600"
                            android:fontFamily="@font/iransans"
                            android:text="@string/noeFaaliat"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:layout_gravity="end"/>

                        <TextView
                            android:id="@+id/noe_faaliat_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16dp"
                            android:textColor="@color/colorGrey800"
                            android:fontFamily="@font/iransans"
                            android:text="خواربار فروشی"
                            android:layout_marginEnd="6dp"
                            android:textDirection="rtl"
                            android:gravity="center"
                            android:layout_gravity="end"/>


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey500"
                    />


                <LinearLayout
                    android:id="@+id/noe_senf_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorGrey600"
                            android:fontFamily="@font/iransans"
                            android:text="@string/noeSenf"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:layout_gravity="end"/>

                        <TextView
                            android:id="@+id/noe_senf_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16dp"
                            android:textColor="@color/colorGrey800"
                            android:fontFamily="@font/iransans"
                            android:text="خرده"
                            android:layout_marginEnd="6dp"
                            android:textDirection="rtl"
                            android:gravity="center"
                            android:layout_gravity="end"/>


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey500"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/modate_vosol_ll"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        android:layout_gravity="center"
                        android:visibility="gone"

                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorGrey600"
                            android:fontFamily="@font/iransans"
                            android:text="@string/modatVosol"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:layout_gravity="end"/>

                        <TextView
                            android:id="@+id/textview_modate_vosol"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16dp"
                            android:textColor="@color/colorGrey800"
                            android:fontFamily="@font/iransans"
                            android:text="10"
                            android:layout_marginEnd="6dp"
                            android:textDirection="rtl"
                            android:gravity="center"
                            android:layout_gravity="end"/>


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey500"
                    />


                <LinearLayout
                    android:id="@+id/noe_vosol_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        android:layout_gravity="center"
                        android:visibility="gone"

                        />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/colorGrey600"
                            android:fontFamily="@font/iransans"
                            android:text="@string/noeVosol"
                            android:layout_marginEnd="6dp"
                            android:gravity="center"
                            android:layout_gravity="end"/>

                        <TextView
                            android:id="@+id/noe_vosol_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16dp"
                            android:textColor="@color/colorGrey800"
                            android:fontFamily="@font/iransans"
                            android:text="وجه نقد"
                            android:layout_marginEnd="6dp"
                            android:textDirection="rtl"
                            android:gravity="center"
                            android:layout_gravity="end"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>


</LinearLayout>