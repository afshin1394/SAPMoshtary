<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewSwitcher"
    android:measureAllChildren="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativelayList"
        android:layoutDirection="rtl"
        android:layout_marginTop="15dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"
            android:scrollbars="vertical"
            android:layoutDirection="rtl"
            android:layout_marginBottom="10dp">
        </androidx.recyclerview.widget.RecyclerView>
        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabMenu"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            fab:menu_fab_size="normal"
            fab:menu_showShadow="true"
            fab:menu_shadowColor="#66000000"
            fab:menu_shadowRadius="4dp"
            fab:menu_shadowXOffset="1dp"
            fab:menu_shadowYOffset="3dp"
            fab:menu_colorNormal="@color/colorFabMenu"
            fab:menu_colorPressed="@color/colorFabMenuClick"
            fab:menu_colorRipple="#99FFFFFF"
            fab:menu_animationDelayPerItem="50"
            fab:menu_icon="@drawable/ic_menu"
            fab:menu_buttonSpacing="0dp"
            fab:menu_labels_margin="0dp"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_paddingTop="4dp"
            fab:menu_labels_paddingRight="8dp"
            fab:menu_labels_paddingBottom="4dp"
            fab:menu_labels_paddingLeft="8dp"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_textColor="@color/colorTextPrimary"
            fab:menu_labels_textSize="14sp"
            fab:menu_labels_colorNormal="@color/colorWhite"
            fab:menu_labels_colorPressed="@color/colorWhite"
            fab:menu_labels_colorRipple="@color/colorWhite"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_position="right"
            fab:menu_openDirection="up"
            fab:menu_labels_customFont="@string/fontPath"
            fab:menu_backgroundColor="@android:color/transparent">
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fabAddShomareHesab"
                android:src="@drawable/ic_fab_add"
                fab:fab_size="normal"
                fab:fab_label="@string/add"
                fab:fab_colorNormal="@color/colorFabAdd"
                fab:fab_colorPressed="@color/colorFabAddClick"
                android:layout_margin="15dp"/>
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/relativelayAddNew"
        android:baselineAligned="false"
        android:layout_marginTop="15dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layButtons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <com.saphamrah.CustomView.CustomTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtinputBank"
                    android:layout_margin="5dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:theme="@style/TextInputLayoutTheme">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBank"
                    android:drawableLeft="@drawable/ic_arrow_down"
                    android:drawableRight="@drawable/ic_seller"
                    android:drawablePadding="@dimen/drawableRightEditTextPadding"
                    android:editable="false"
                    android:hint="@string/bank"
                    android:textSize="@dimen/FontSize16"
                    android:textColor="@color/colorTextPrimary"
                    android:inputType="none"
                    android:maxLines="1"/>
                </com.saphamrah.CustomView.CustomTextInputLayout>

                <com.saphamrah.CustomView.CustomTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtinputNoeHesab"
                    android:layout_margin="5dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:theme="@style/TextInputLayoutTheme">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtNoeHesab"
                        android:drawableLeft="@drawable/ic_arrow_down"
                        android:drawableRight="@drawable/ic_seller"
                        android:drawablePadding="@dimen/drawableRightEditTextPadding"
                        android:editable="false"
                        android:hint="@string/noeHesab"
                        android:textSize="@dimen/FontSize16"
                        android:textColor="@color/colorTextPrimary"
                        android:inputType="none"
                        android:maxLines="1"/>
                </com.saphamrah.CustomView.CustomTextInputLayout>

                <com.saphamrah.CustomView.CustomTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtinputShartBardasht"
                    android:layout_margin="5dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:theme="@style/TextInputLayoutTheme">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtShartBardasht"
                        android:drawableLeft="@drawable/ic_arrow_down"
                        android:drawableRight="@drawable/ic_seller"
                        android:drawablePadding="@dimen/drawableRightEditTextPadding"
                        android:editable="false"
                        android:hint="@string/ShartBardasht"
                        android:textSize="@dimen/FontSize16"
                        android:textColor="@color/colorTextPrimary"
                        android:inputType="none"
                        android:maxLines="1"/>
                </com.saphamrah.CustomView.CustomTextInputLayout>

                <com.saphamrah.CustomView.CustomTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtinputNameShobe"
                    android:layout_margin="5dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:theme="@style/TextInputLayoutTheme">
                    <requestFocus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtNameShobe"
                        android:drawableRight="@drawable/ic_seller"
                        android:drawablePadding="@dimen/drawableRightEditTextPadding"
                        android:hint="@string/nameShobe"
                        android:textSize="@dimen/FontSize16"
                        android:textColor="@color/colorTextPrimary"
                        android:inputType="text"
                        android:maxLines="1"/>
                </com.saphamrah.CustomView.CustomTextInputLayout>

                <com.saphamrah.CustomView.CustomTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtinputCodeShobe"
                    android:layout_margin="5dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:theme="@style/TextInputLayoutTheme">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCodeShobe"
                        android:drawableRight="@drawable/ic_seller"
                        android:drawablePadding="@dimen/drawableRightEditTextPadding"
                        android:hint="@string/codeShobe"
                        android:textSize="@dimen/FontSize16"
                        android:textColor="@color/colorTextPrimary"
                        android:inputType="number"
                        android:maxLines="1"/>
                </com.saphamrah.CustomView.CustomTextInputLayout>

                <com.saphamrah.CustomView.CustomTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtinputShomareHesab"
                    android:layout_margin="5dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:theme="@style/TextInputLayoutTheme">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtShomareHesab"
                        android:drawableRight="@drawable/ic_seller"
                        android:drawablePadding="@dimen/drawableRightEditTextPadding"
                        android:hint="@string/shomareHesab"
                        android:textSize="@dimen/FontSize16"
                        android:textColor="@color/colorTextPrimary"
                        android:inputType="number"
                        android:maxLines="1"/>
                </com.saphamrah.CustomView.CustomTextInputLayout>

                <com.saphamrah.CustomView.CustomTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtinputSahebHesab"
                    android:layout_margin="5dp"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:theme="@style/TextInputLayoutTheme">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtSahebHesab"
                        android:drawableRight="@drawable/ic_seller"
                        android:drawablePadding="@dimen/drawableRightEditTextPadding"
                        android:hint="@string/sahebHesab"
                        android:textSize="@dimen/FontSize16"
                        android:textColor="@color/colorTextPrimary"
                        android:inputType="text"
                        android:maxLines="1"/>
                </com.saphamrah.CustomView.CustomTextInputLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layButtons"
            android:background="@color/colorAccent"
            android:layout_margin="2dp"
            android:layoutDirection="rtl"
            android:layout_alignParentBottom="true">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnApply"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/apply"
                android:textSize="@dimen/btnFontMain"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/altdlgButtonPadding"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:layout_margin="5dp">
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancel"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="@dimen/btnFontMain"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/altdlgButtonPadding"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </RelativeLayout>

</ViewSwitcher>