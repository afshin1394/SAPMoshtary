<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".MVP.View.RptForoshandehRouteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layTitle"
        android:layoutDirection="rtl"
        android:background="@color/colorPrimary"
        android:padding="@dimen/paddingTitle"
        android:elevation="@dimen/elevationActivityTitle"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblActivityTitle"
            android:text="@string/reportForoshandehRoute"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/lblActivityTitle"
            android:layout_centerInParent="true"/>

        <!-- Must be last for right layering display -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                android:layoutDirection="ltr"/>
            <com.miguelcatalan.materialsearchview.MaterialSearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchView"
                style="@style/MaterialSearchViewStyle"
                android:layoutDirection="ltr"
                android:layout_alignParentRight="true"
                android:hint="@string/nameKala"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layTableTitle"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_below="@+id/layTitle">
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/lblRadif"
            android:text="@string/radif"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/lblNameCodeMasir"
            android:text="@string/nameMasir"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/lblRoozVisit"
            android:text="@string/roozVisit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/lblToorVisit"
            android:text="@string/toorVisit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lblKhorde"
            android:text="@string/khorde"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lblOmdeh"
            android:text="@string/omdeh"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lblTaavoni"
            android:text="@string/taavoni"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lblZanjiree"
            android:text="@string/zanjiree"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lblNamayandeh"
            android:text="@string/namayandeh"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lblSum"
            android:text="@string/sum"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>
<!--        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/lblSumBaZaribKhorde"
            android:text="@string/sumBaZaribKhorde"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/FontSize14"
            android:gravity="center"
            android:background="@drawable/table_header_cell_bg"
            android:padding="5dp"/>-->
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"
        android:layoutDirection="rtl"
        android:layout_marginBottom="10dp"
        android:paddingBottom="75dp"
        android:clipToPadding="false"
        android:layout_below="@+id/layTableTitle"
        android:layout_above="@+id/laySumFooter">
    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/laySumFooter"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:layout_below="@+id/layTitle">
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="@string/sum"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblSumKhorde"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblSumOmdeh"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblSumTaavoni"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblSumZanjiree"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblSumNamayandeh"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblSumSum"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
<!--            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/lblSumSumBaZaribKhorde"
                android:text="@string/sumBaZaribKhorde"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:layout_below="@+id/layTitle">
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="@string/dailyAverage"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblAverageKhorde"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblAverageOmdeh"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblAverageTaavoni"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblAverageZanjiree"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblAverageNamayandeh"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lblAverageSum"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>
<!--            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/lblAverageSumBaZaribKhorde"
                android:text="@string/sumBaZaribKhorde"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/FontSize14"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:padding="5dp"/>-->
        </LinearLayout>
    </LinearLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="70dp"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="@color/colorFabMenu"
        fab:menu_colorPressed="@color/colorFabMenuClick"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/ic_menu"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_textColor="@color/colorTextPrimary"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_colorNormal="@color/colorWhite"
        fab:menu_labels_colorPressed="@color/colorWhite"
        fab:menu_labels_colorRipple="@color/colorWhite"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="right"
        fab:menu_openDirection="up"
        fab:menu_labels_customFont="@string/fontPath"
        fab:menu_backgroundColor="@android:color/transparent">
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabRefresh"
            android:src="@drawable/ic_refresh"
            fab:fab_size="normal"
            fab:fab_label="@string/refresh"
            fab:fab_colorNormal="@color/colorFabRefresh"
            fab:fab_colorPressed="@color/colorFabRefreshClick"/>
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>