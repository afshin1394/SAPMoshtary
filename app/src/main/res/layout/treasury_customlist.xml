<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:background="@drawable/altdlg_bg"
    android:gravity="center"
    android:layoutDirection="ltr"
    app:cardCornerRadius="10dp">


    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftEdgeSwipeOffset="0dp"
        app:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:id="@+id/layLeft"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackDeleteCustomerSwipe"
            android:gravity="center"
            android:layoutDirection="rtl">

            <RelativeLayout
                android:id="@+id/layEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorDivider">

                <ImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_vosol" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layEditDarkhast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorFabHelp">

                <ImageView
                    android:id="@+id/imgEditDarkhast"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_darkhastkala" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layMarjoee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorSliderCustomers">

                <ImageView
                    android:id="@+id/imgMarjoee"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_marjoee" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/laySend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBackSendDataSwipe">

                <ImageView
                    android:id="@+id/imgSend"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_send" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layElatAdamTahvil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBackShowCustomerLocationSwipe">

                <ImageView
                    android:id="@+id/imgElatAdamTahvil"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_odatdarkhast" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layPrint"
                android:layout_gravity="center"
                android:background="@color/colorFabPrint">
                <ImageView
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:id="@+id/imgPrint"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_print"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layRight"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackDeleteCustomerSwipe"
            android:gravity="center"
            android:layoutDirection="rtl">

            <RelativeLayout
                android:id="@+id/layShowLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBackDeleteCustomerSwipe">

                <ImageView
                    android:id="@+id/imgCustomerLocation"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_show_location" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/laySaveAndSendLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBackRoute">

                <ImageView
                    android:id="@+id/imgSaveAndSendLocation"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_change_pin" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/layFaktorImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBackSendDataSwipe">

                <ImageView
                    android:id="@+id/imgFaktor"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_capturedarkhast" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layFaktorDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBackShowCustomerLocationSwipe">

                <ImageView
                    android:id="@+id/imgFaktorDetail"
                    android:layout_width="@dimen/iconSize64"
                    android:layout_height="@dimen/iconSize64"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:src="@drawable/ic_show_faktor_detail" />
            </RelativeLayout>
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_for_color">



            <LinearLayout
                android:id="@+id/layStatusLeft"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <LinearLayout
                android:id="@+id/layStatusRight"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:id="@+id/lblRadif"
                android:gravity="center"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/lblRadif"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                >



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lay_first_treasuryList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <LinearLayout
                        android:id="@+id/lay_expand_btn"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/expand_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_up"
                            android:visibility="visible" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/lblCodeNameCustomer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintLeft_toRightOf="@+id/lay_expand_btn"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lblShomarehDarkhast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toRightOf="@+id/lay_expand_btn"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblCodeNameCustomer"
                        app:layout_constraintVertical_bias="0.0" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lay_second_treasuryList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:animateLayoutChanges="true"
                    >

                    <TextView
                        android:id="@+id/lblNameForoshandeh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lblMablaghKhalesFaktor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblNameForoshandeh" />

                    <TextView
                        android:id="@+id/lblMablaghMandehFaktor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblMablaghKhalesFaktor" />

                    <TextView
                        android:id="@+id/lblTarikhErsal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblMablaghMandehFaktor" />
                    <TextView
                        android:id="@+id/lblTarikhMoarefiMoshtary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblTarikhErsal" />

                    <TextView
                        android:id="@+id/lblNameNoeVosol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lblTarikhMoarefiMoshtary"
                        />

                    <TextView
                        android:id="@+id/lblMoshtaryGharardad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblNameNoeVosol"
                        />

                    <TextView
                        android:id="@+id/lblHaveMarjoee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorTextPrimary"
                        android:text="@string/marjoee"
                        android:textSize="@dimen/FontSize16"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblNameNoeVosol"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/imgHaveMarjoee"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        app:layout_constraintTop_toTopOf="@+id/lblHaveMarjoee"
                        app:layout_constraintBottom_toBottomOf="@+id/lblHaveMarjoee"
                        app:layout_constraintRight_toLeftOf="@+id/lblHaveMarjoee"
                        android:layout_marginEnd="@dimen/_5sdp"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.daimajia.swipe.SwipeLayout>

</androidx.cardview.widget.CardView>