<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="8"
    android:layout_height="64dp">
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relNotif"
            android:orientation="vertical"
            android:layout_margin="@dimen/_2sdp">
            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:id="@+id/image"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/ic_launcher_icon"
                android:layout_gravity="right"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوتیفیکیشن"
                android:id="@+id/titleNotif"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:textDirection="rtl"
                android:layout_gravity="right"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوتیفیکیشن"
                style="@style/TextAppearance.Compat.Notification"
                android:id="@+id/textNotif"
                android:textDirection="rtl"
                android:layout_gravity="right"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_4sdp"
            >
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_location"
                android:layout_toLeftOf="@id/relNotif"
                android:layout_weight="1"

                ></ImageView>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>