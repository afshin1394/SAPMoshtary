<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_32sdp"
    android:layout_margin="@dimen/_2sdp"
    android:layoutDirection="rtl"


    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp">
        <LinearLayout
            android:background="@drawable/purchase_light_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/bonus_discount_tag"
                android:padding="@dimen/_4sdp"
                />
            <TextView
                style="@style/text_view_normal_right"
                android:id="@+id/tv_bonus_name"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/jayezePromotion"
                />
            <TextView
                android:text="تعداد جایزه: 14"
                style="@style/text_view_normal_right"
                android:id="@+id/tv_bonus_quantity"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>