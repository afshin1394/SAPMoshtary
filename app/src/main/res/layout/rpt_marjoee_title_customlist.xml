<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:id="@+id/lblCustomerCodeName"
        android:textSize="@dimen/FontSize8dp"
        android:textColor="@color/colorTextPrimary"
        android:gravity="center_vertical|right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lblShomareFaktor"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        android:id="@+id/lblShomareFaktor"
        android:textSize="@dimen/FontSize8dp"
        android:textColor="@color/colorTextPrimary"
        android:gravity="center_vertical|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/lblCustomerCodeName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>