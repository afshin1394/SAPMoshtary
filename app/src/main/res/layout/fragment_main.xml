<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:layout_constraintVertical_weight="4"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constraint1MainFrag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineHalfScreen"
        tools:ignore="NotSibling">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHalfScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStartScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEndScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1" />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline48Screen"
            app:layout_constraintGuide_percent="0.48"
            android:orientation="vertical"></androidx.constraintlayout.widget.Guideline>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline52Screen"
            app:layout_constraintGuide_percent="0.52"
            android:orientation="vertical"></androidx.constraintlayout.widget.Guideline>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidelineHalfScreen"
            android:id="@+id/imgDayTime"
            android:scaleType="fitXY"
            android:src="@drawable/midday"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCurrentDate"
            app:layout_constraintLeft_toLeftOf="@id/guideline48Screen"
            app:layout_constraintRight_toRightOf="@id/guideline52Screen"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"

            android:padding="10dp"
            android:background="@drawable/textview_bg_bottom_round"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblDayTime"
            app:layout_constraintTop_toTopOf="@id/guideline48HorizontalScreen"
           app:layout_constraintBottom_toBottomOf="@id/guideline52HorizontalScreen"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/textview_bg_left_round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTemperature"
            app:layout_constraintBottom_toBottomOf="@id/guideline52HorizontalScreen"
            app:layout_constraintTop_toTopOf="@id/guideline48HorizontalScreen"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/textview_bg_right_round"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint2MainFrag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint1MainFrag"
        >
        <androidx.viewpager.widget.ViewPager
            android:layout_height="222dp"
            android:layout_width="wrap_content"
            android:id="@+id/view_pager_mainFrag"
            app:layout_constraintTop_toBottomOf="@id/guidelineHalfScreen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>