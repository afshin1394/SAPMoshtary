<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:background="@drawable/table_content_cell_bg_black">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/layBorderRight"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/layBorderLeft"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/layBorderTop"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/layBorderBottom"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="4"
        android:id="@+id/lblSharh"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintTop_toBottomOf="@id/layBorderTop"
        app:layout_constraintBottom_toTopOf="@id/layBorderBottom"
        app:layout_constraintRight_toLeftOf="@id/layBorderRight"
        app:layout_constraintLeft_toRightOf="@id/lblTedad"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/lblTedad"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintTop_toBottomOf="@id/layBorderTop"
        app:layout_constraintBottom_toTopOf="@id/layBorderBottom"
        app:layout_constraintLeft_toRightOf="@id/lblSoodeJayezeh"
        app:layout_constraintRight_toLeftOf="@id/lblSharh"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="2"
        android:id="@+id/lblSoodeJayezeh"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize14"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintTop_toBottomOf="@id/layBorderTop"
        app:layout_constraintBottom_toTopOf="@id/layBorderBottom"
        app:layout_constraintLeft_toRightOf="@id/layBorderLeft"
        app:layout_constraintRight_toLeftOf="@id/lblTedad"/>

</androidx.constraintlayout.widget.ConstraintLayout>