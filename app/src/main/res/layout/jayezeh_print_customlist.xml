<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:background="@drawable/table_content_cell_bg_black">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/layBorderRight"
        android:orientation="vertical"
        android:background="@color/colorBlack">
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/layBorderLeft"
        android:orientation="vertical"
        android:background="@color/colorBlack">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/layBorderTop"
        android:orientation="vertical"
        android:background="@color/colorBlack">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/layBorderBottom"
        android:orientation="vertical"
        android:background="@color/colorBlack">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lblSharh"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize20"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintLeft_toRightOf="@id/lblTedad"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lblTedad"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize20"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintRight_toLeftOf="@id/lblSharh"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lblSoodeJayezeh"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize20"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintRight_toLeftOf="@id/lblTedad"/>
    </LinearLayout>
</LinearLayout>