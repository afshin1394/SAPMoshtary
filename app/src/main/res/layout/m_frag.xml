<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainConstraint"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStartScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEndScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHalfScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/constraint1MainFrag"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >




        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline48HorizontalScreen"
            app:layout_constraintGuide_percent="0.47"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline70HorizontalScreen"
            app:layout_constraintGuide_percent="0.20"
            android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline52HorizontalScreen"
            app:layout_constraintGuide_percent="0.53"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline48Screen"
            app:layout_constraintGuide_percent="0.90"
            android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline52Screen"
            app:layout_constraintGuide_percent="0.95"
            android:orientation="horizontal"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imgDayTime"
            android:scaleType="fitXY"
            android:src="@drawable/midday"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"
            android:padding="@dimen/_2sdp"
            android:id="@+id/lblCurrentDate"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorTextPrimary"
            android:background="@drawable/textview_bg_bottom_round"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblDayTime"
            app:layout_constraintBottom_toBottomOf="@id/guideline52Screen"
            app:layout_constraintTop_toTopOf="@id/guideline52Screen"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"
            android:paddingEnd="10dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingBottom="5dp"
            android:background="@drawable/textview_bg_left_round"
 />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTemperature"
            app:layout_constraintBottom_toBottomOf="@id/guideline52Screen"
            app:layout_constraintTop_toTopOf="@id/guideline52Screen"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="@dimen/_20sdp"

            android:background="@drawable/textview_bg_right_round"
            tools:ignore="SpUsage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/constraint2MainFrag"
        android:background="@color/mdtp_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint1MainFrag">



        <androidx.viewpager.widget.ViewPager
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/view_pager_mainFrag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>