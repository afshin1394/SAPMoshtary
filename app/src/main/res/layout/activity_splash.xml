<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MVP.View.MainActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-400dp"
        android:alpha="0.05"
        android:scaleType="fitXY"
        android:src="@drawable/ic_network" />

    <ImageView
        android:id="@+id/Img_central_logo"
        android:layout_width="@dimen/SplashLogo"
        android:layout_height="@dimen/SplashLogo"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/crdIdentityCode"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/Img_central_logo"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/_40sdp"
        android:visibility="gone">



            <EditText
                android:id="@+id/etv_IdentityCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/identityCode"
                android:textColorHint="@color/colorTextSecondary"
                android:inputType="number"
                android:maxLength="10"
                android:padding="@dimen/_6sdp"
                android:textDirection="rtl"
                android:gravity="center"/>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblVersion"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/FontSize18"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblImei"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/FontSize18"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnOffline"
        android:text="@string/offlineView"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/btnFontMain"
        android:gravity="center"
        android:padding="@dimen/btnPaddingMain"
        android:background="@drawable/btn_bg"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>