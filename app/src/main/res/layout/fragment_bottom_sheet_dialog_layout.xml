<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_peekHeight="202dp"
    android:maxHeight="370dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:id="@+id/shapeableimg"
                android:layout_height="113dp"
                android:layout_width="match_parent"
                android:background="@drawable/shape_curve"
                android:layout_marginTop="20dp"
                app:shapeAppearanceOverlay="@style/roundedMenuSheet"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/arrow_down_bottom_sheet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_up"
                android:elevation="7dp"
                app:civ_circle_background_color="@color/colorDivider"
                app:civ_border_color="@color/colorDivider"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="277dp"
                android:background="@color/bg_view"
                android:paddingBottom="25dp"
                android:layout_marginTop="35dp"
                android:layoutDirection="rtl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arrow_down_bottom_sheet" />

</androidx.constraintlayout.widget.ConstraintLayout>