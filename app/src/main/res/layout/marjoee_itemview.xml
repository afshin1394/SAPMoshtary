<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/altdlg_bg"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layoutDirection="rtl">
        <com.daimajia.swipe.SwipeLayout
            android:background="@drawable/purchase_light_background"

            xmlns:swipe="http://schemas.android.com/apk/res-auto"
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            swipe:leftEdgeSwipeOffset="0dp"
            swipe:rightEdgeSwipeOffset="0dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/laySwipe"
                android:gravity="center"
                android:tag="Bottom3">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/layDelete"
                    android:layout_gravity="center"
                    android:background="@color/colorDivider">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgDelete"
                        android:src="@drawable/ic_delete"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layoutDirection="rtl"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/layEditCount"
                    android:layout_gravity="center"
                    android:background="@color/colorBackAddCustomerDocSwipe">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgEditCount"
                        android:src="@drawable/ic_edit_user"
                        android:layout_gravity="center_vertical"
                        android:layoutDirection="rtl"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_CodeNameKala"
                        android:text="10234422-حلوای عقاب"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize14"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:gravity="center_vertical|right"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text=" بچ:0345643 "
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tv_ShomareBach"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize14"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_vertical|right"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tv_MablaghMarjoee"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/FontSize14"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text=" مبلغ مرجوعی: 230000ریال"
                            android:gravity="center_vertical|right"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tv_MablaghForosh"
                            android:text=" مبلغ فروش: 230000ریال"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/FontSize14"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:gravity="center_vertical|right"/>

                    </LinearLayout>

                </LinearLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lin_addmarjoee_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:elevation="@dimen/_24sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="@dimen/_144sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/rounded_corner_background"
                        android:elevation="@dimen/_4sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_to_cart"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_margin="@dimen/_12sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/add_product" />

                        <com.saphamrah.customer.utils.customViews.EditTextWatcher
                            android:id="@+id/tv_count"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:gravity="center|top"
                            android:inputType="number"
                            android:padding="@dimen/_6sdp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:id="@+id/remove_from_cart"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_margin="@dimen/_12sdp"
                            android:src="@drawable/sharp_remove_black_36" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_24sdp"
                        android:src="@drawable/ic_trash_2" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_addmarjoee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner_purchase_red_dark_gradiant"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="افزودن"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </com.daimajia.swipe.SwipeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>