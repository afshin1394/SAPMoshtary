<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/altdlg_bg"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="10dp"
        android:layoutDirection="rtl">





            <LinearLayout
                android:background="@drawable/purchase_light_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_marjoee"/>
                    <TextView
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_CodeNameKala"
                        android:text="10234422-حلوای عقاب"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize14"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:gravity="center_vertical|right"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text=" بچ:0345643 "
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tv_ShomareBach"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/FontSize14"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_vertical|right"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tv_MablaghMarjoee"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/FontSize14"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text=" مبلغ مرجوعی: 230000ریال"
                            android:gravity="center_vertical|right"/>
                        <TextView
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tv_MablaghForosh"
                            android:text=" مبلغ فروش: 230000ریال"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/FontSize14"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:gravity="center_vertical|right"/>

                    </LinearLayout>

                </LinearLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lin_addmarjoee_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_24sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginRight="@dimen/_22sdp"
                            android:background="@drawable/rounded_corner_dark_red_gradiant"
                            android:elevation="@dimen/_1sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/add_to_cart"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_margin="@dimen/_2sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/add_product" />

                            <com.saphamrah.customer.utils.customViews.EditTextWatcher
                                android:id="@+id/etw_count"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|top"
                                android:gravity="bottom"
                                android:inputType="number"
                                android:maxWidth="@dimen/_28sdp"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:text="45"
                                android:textColor="@color/colorBlack"
                                android:textDirection="rtl"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/remove_from_cart"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/sharp_remove_black_36" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/remove_marjoee"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center"
                            android:elevation="@dimen/_24sdp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_trash_2" />
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_addmarjoee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner_purchase_red_dark_gradiant"
                    android:gravity="center"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="افزودن"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>
                </FrameLayout>
            </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>