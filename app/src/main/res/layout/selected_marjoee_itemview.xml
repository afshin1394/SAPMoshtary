<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:background="@drawable/bordered_transparent"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <ImageView

        android:id="@+id/img_label_marjoee"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:src="@drawable/ic_marjoee"
        android:layout_height="wrap_content"
        style="@style/text_view_tight"
        android:layout_gravity="center"
        android:text="@string/marjoee"
        />
    <TextView
        android:id="@+id/tv_marjoee_kala_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        style="@style/text_view_tight"
        android:text="@string/marjoee"
        />
    <TextView
        android:id="@+id/tv_marjoee_tedad"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        style="@style/text_view_tight"
        android:text="@string/tedadAghlam"/>

    <TextView
        android:id="@+id/tv_mablagh_marjoee"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        style="@style/text_view_tight"
        android:text="@string/mablaghMarjoee"/>

</LinearLayout>