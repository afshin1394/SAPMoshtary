<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layRoot">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crdviewRoot"
        android:background="@drawable/altdlg_bg"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:layoutDirection="rtl">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/imgSelect"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/circle_tick_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_toLeftOf="@+id/imgSelect"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/lblNameKala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/FontSize14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblShomareBach"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/_8ssp"
                            android:text="@string/updateKalaInfoWarning"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:maxLines="2"
                            android:background="@drawable/rect_round_orange"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblGheymat"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/_8ssp"
                            android:text="@string/tarikhMoarefiMoshtary"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:maxLines="2"
                            android:background="@drawable/rect_round_blue"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center">
                        <com.saphamrah.CustomView.CustomTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtinputEditableGheymat"
                            android:layoutDirection="rtl"
                            android:textDirection="rtl"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:theme="@style/TextInputLayoutTheme"
                            android:enabled="false"

                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lblEditableGheymat"
                                android:textSize="@dimen/FontSize12"
                                android:textColor="@color/colorTextPrimary"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:inputType="number"
                                android:maxLength="12"
                                android:maxLines="1"
                                android:selectAllOnFocus="true"/>
                        </com.saphamrah.CustomView.CustomTextInputLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>