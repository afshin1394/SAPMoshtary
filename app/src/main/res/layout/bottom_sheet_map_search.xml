<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_mapView_BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:cardElevation="@dimen/_8sdp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mapView_constraintLayout_bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.saphamrah.customer.utils.customViews.SearchWatcher
                android:id="@+id/searchView_mapView_bottomSheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                app:layout_constraintBottom_toTopOf="@id/mapView_bottomSheet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:searchHintIcon="@drawable/ic_search_black" />

            <org.osmdroid.views.MapView
                android:id="@+id/mapView_bottomSheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchView_mapView_bottomSheet"></org.osmdroid.views.MapView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_mapView_bottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5">

            </androidx.constraintlayout.widget.Guideline>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_apply_mapView_bottomSheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransans"
                android:gravity="center"
                android:text="@string/apply"
                android:textAllCaps="false"
                android:textColor="@color/colorTextSecondary"
                android:textSize="18sp"
                app:backgroundTint="@color/colorAccent"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/guideline_mapView_bottomSheet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_cancel_mapView_bottomSheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransans"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorTextSecondary"
                android:textSize="18sp"
                app:backgroundTint="@color/colorAccent"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_mapView_bottomSheet"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
