<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layoutDirection="rtl">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/altdlg_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            android:layoutDirection="rtl">
            <com.daimajia.swipe.SwipeLayout
                xmlns:swipe="http://schemas.android.com/apk/res-auto"
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                swipe:leftEdgeSwipeOffset="0dp"
                swipe:rightEdgeSwipeOffset="0dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:id="@+id/layLeft"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layPorseshname"
                        android:layout_gravity="center"
                        android:background="@color/colorDivider">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:src="@drawable/ic_porseshname"
                            android:layout_centerInParent="true"
                            android:layoutDirection="rtl"
                            android:layout_marginRight="5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/laySuggest"
                        android:layout_gravity="center"
                        android:background="@color/colorTitleExpandable">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:src="@drawable/ic_suggest"
                            android:layout_centerInParent="true"
                            android:layoutDirection="rtl"
                            android:layout_marginRight="5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layAdamFaal"
                        android:layout_gravity="center"
                        android:background="@color/colorBackDeleteCustomerSwipe">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:src="@drawable/ic_disabled"
                            android:layout_centerInParent="true"
                            android:layoutDirection="rtl"
                            android:layout_marginRight="5dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:id="@+id/layRight"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layLocation"
                        android:layout_gravity="center"
                        android:background="@color/colorBackShowCustomerLocationSwipe">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:src="@drawable/ic_show_location"
                            android:layout_centerInParent="true"
                            android:layoutDirection="rtl"
                            android:layout_marginRight="5dp" />
                    </RelativeLayout>
<!--                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layDelete"
                        android:layout_gravity="center"
                        android:background="@color/colorBackDeleteCustomerSwipe">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:src="@drawable/ic_delete"
                            android:layout_centerInParent="true"
                            android:layoutDirection="rtl"
                            android:layout_marginRight="5dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/laySend"
                        android:layout_gravity="center"
                        android:background="@color/colorBackSendDataSwipe">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:src="@drawable/ic_send"
                            android:layout_centerInParent="true"
                            android:layoutDirection="rtl"
                            android:layout_marginRight="5dp" />
                    </RelativeLayout>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:id="@+id/layStatusRight"
                        android:orientation="vertical">
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/lblRadif"
                        android:gravity="center"
                        android:textSize="@dimen/FontSize20"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layoutDirection="rtl"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/iconSize24"
                                android:layout_height="@dimen/iconSize24"
                                android:src="@drawable/ic_name"
                                android:layout_gravity="center_vertical" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/lblCustomerFullNameCode"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/FontSize16"
                                android:gravity="center_vertical|right"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl"
                                android:layout_marginRight="10dp"/>
                            <ImageView
                                android:layout_width="@dimen/iconSize24"
                                android:layout_height="@dimen/iconSize24"
                                android:id="@+id/imgviewStatus"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layoutDirection="rtl"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/iconSize24"
                                android:layout_height="@dimen/iconSize24"
                                android:src="@drawable/ic_type_address"
                                android:layout_gravity="center_vertical" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lblAddress"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="@dimen/FontSize14"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical|right"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layoutDirection="rtl"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/iconSize24"
                                    android:layout_height="@dimen/iconSize24"
                                    android:id="@+id/imgCustomerPhone"
                                    android:src="@drawable/ic_telephone"
                                    android:layout_gravity="center_vertical" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lblTelephone"
                                    android:textColor="@color/colorTextSecondary"
                                    android:textSize="@dimen/FontSize14"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical|right"
                                    android:layoutDirection="rtl"
                                    android:textDirection="rtl"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layoutDirection="rtl"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/iconSize24"
                                    android:layout_height="@dimen/iconSize24"
                                    android:id="@+id/imgCustomerMobile"
                                    android:src="@drawable/ic_mobile"
                                    android:layout_gravity="center_vertical" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lblMobile"
                                    android:textColor="@color/colorTextSecondary"
                                    android:textSize="@dimen/FontSize14"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical|right"
                                    android:layoutDirection="rtl"
                                    android:textDirection="rtl"
                                    android:layout_marginRight="10dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layoutDirection="rtl"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/lblLastPurchaseDate"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="@dimen/FontSize14"
                                android:drawableRight="@drawable/ic_calendar"
                                android:maxLines="1"
                                android:gravity="center_vertical|right"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/lblLastPurchaseCost"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="@dimen/FontSize14"
                                android:drawableLeft="@drawable/ic_invoice"
                                android:maxLines="1"
                                android:gravity="center_vertical|left"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:id="@+id/layStatusLeft"
                        android:orientation="vertical">
                    </LinearLayout>

                </LinearLayout>

            </com.daimajia.swipe.SwipeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>