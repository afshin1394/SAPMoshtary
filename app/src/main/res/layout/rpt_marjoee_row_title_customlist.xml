<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:background="@color/colorTitleExpandable">

    <TextView
        android:id="@+id/lblCustomerCodeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lblShomareFaktor"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/lblShomareFaktor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/FontSize14"
        app:layout_constraintTop_toBottomOf="@id/lblCustomerCodeName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lblSumCost"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rect_round_orange"
        android:padding="5dp"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/lblSumCost"
        android:textSize="@dimen/FontSize14"
        android:textColor="@color/colorTextPrimary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lblCustomerCodeName"
        app:layout_constraintRight_toLeftOf="@id/lblShomareFaktor"
        app:layout_constraintLeft_toRightOf="@id/lblSumCount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rect_round_green"
        android:padding="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/lblSumCount"
        android:textSize="@dimen/FontSize14"
        android:textColor="@color/colorTextPrimary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lblCustomerCodeName"
        app:layout_constraintRight_toLeftOf="@id/lblSumCost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rect_round_blue"
        android:padding="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>