<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/altdlg_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            android:layoutDirection="rtl">
            <com.daimajia.swipe.SwipeLayout
                xmlns:swipe="http://schemas.android.com/apk/res-auto"
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                swipe:leftEdgeSwipeOffset="0dp"
                swipe:rightEdgeSwipeOffset="0dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/layRight"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layDelete"
                        android:layout_gravity="center"
                        android:background="@color/colorBackAddCustomerDocSwipe">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgDelete"
                            android:src="@drawable/ic_delete"
                            android:layout_gravity="center_vertical"
                            android:layoutDirection="rtl"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/laySend"
                        android:layout_gravity="center"
                        android:background="@color/colorBackShowCustomerLocationSwipe">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:id="@+id/imgSend"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_send"
                            android:layout_gravity="center"
                            android:layoutDirection="rtl" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layPrint"
                        android:layout_gravity="center"
                        android:background="@color/colorFabPrint">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:id="@+id/imgPrint"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_print"
                            android:layout_gravity="center"
                            android:layoutDirection="rtl" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/layLeft"
                    android:background="@color/colorBackDeleteCustomerSwipe"
                    android:gravity="center"
                    android:layoutDirection="rtl">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/laySaveImage"
                        android:layout_gravity="center"
                        android:background="@color/colorBackSendDataSwipe">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:id="@+id/imgSaveImage"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_capturedarkhast"
                            android:layout_gravity="center"
                            android:layoutDirection="rtl" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layReceipt"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary">
                        <ImageView
                            android:layout_width="@dimen/iconSize64"
                            android:layout_height="@dimen/iconSize64"
                            android:id="@+id/imgReceipt"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_captureresiddarkhast"
                            android:layout_gravity="center"
                            android:layoutDirection="rtl" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/lblRadif"
                        android:gravity="center"
                        android:textSize="@dimen/FontSize20"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layoutDirection="rtl"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/iconSize24"
                                android:layout_height="@dimen/iconSize24"
                                android:src="@drawable/ic_name"
                                android:layout_gravity="center_vertical" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lblCustomerFullNameCode"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/FontSize16"
                                android:gravity="center_vertical|right"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layoutDirection="rtl"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/iconSize24"
                                android:layout_height="@dimen/iconSize24"
                                android:src="@drawable/ic_success"
                                android:layout_gravity="center_vertical" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lblInvoiceCost"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="@dimen/FontSize14"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical|right"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.daimajia.swipe.SwipeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>