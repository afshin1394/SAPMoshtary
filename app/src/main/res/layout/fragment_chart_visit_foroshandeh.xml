<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MVP.View.MainViewPagerFragments.FragmentChartVisitForoshandeh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/altdlg_bg"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblChartCountFaktor"
                android:text="گزارش ویزیت فروشنده "
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/chartTitleMain"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/updateRptVFtv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:drawableStart="@drawable/ic_refresh"
                android:drawableTint="@color/colorBlack"/>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/btnCornerRadius"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp">
            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/barChartCountFaktor"
                android:background="@android:color/white" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>