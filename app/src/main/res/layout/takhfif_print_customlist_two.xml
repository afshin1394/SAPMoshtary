<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:background="@drawable/table_content_cell_bg_black">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/layBorderRight"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/layBorderLeft"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/layBorderTop"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/layBorderBottom"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/lblSharhTakhfif"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize30"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintTop_toBottomOf="@id/layBorderTop"
        app:layout_constraintRight_toLeftOf="@id/layBorderRight"
        app:layout_constraintLeft_toRightOf="@id/layBorderLeft"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lblDarsadTakhfif"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize30"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintTop_toBottomOf="@id/lblSharhTakhfif"
        app:layout_constraintRight_toLeftOf="@id/layBorderRight"
        app:layout_constraintLeft_toRightOf="@id/lblMablaghTakhfif"
        app:layout_constraintBottom_toTopOf="@id/layBorderBottom"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lblMablaghTakhfif"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/FontSize30"
        android:gravity="center"
        android:background="@drawable/table_content_cell_bg"
        app:layout_constraintTop_toBottomOf="@id/lblSharhTakhfif"
        app:layout_constraintLeft_toRightOf="@id/layBorderLeft"
        app:layout_constraintRight_toLeftOf="@id/lblDarsadTakhfif"
        app:layout_constraintBottom_toTopOf="@id/layBorderBottom"/>


</androidx.constraintlayout.widget.ConstraintLayout>