<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_top_red_gradiant"
    android:maxHeight="@dimen/_270sdp"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:elevation="@dimen/_2sdp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/IV_collapse"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_8sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_arrow_down_secondary" />
        <View
            style="@style/devider_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:orientation="horizontal"
            android:gravity="end"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/brand_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">


                <TextView
                    android:text="نام کالا"
                    style="@style/text_view_title"/>

                <TextView
                    android:id="@+id/tv_brand"
                    android:text="بستنی پاندا"
                    style="@style/text_view_item"/>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGrey500"
                />

            <LinearLayout
                android:id="@+id/kala_code_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:text="کد کالا"
                    style="@style/text_view_title"/>

                <TextView
                    android:id="@+id/tv_kala_code"
                    android:text="524985237"
                    style="@style/text_view_item"/>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layoutDirection="rtl"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layoutDirection="rtl"
                android:id="@+id/lin_purchaseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:elevation="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/lin_carton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layoutDirection="rtl"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tv_add_carton"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/plus_green" />



                            <com.saphamrah.customer.utils.customViews.EditTextWatcher
                                android:id="@+id/tv_quantity_carton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="@string/carton"
                                android:textStyle="bold"
                                android:inputType="number"
                                android:text="100"
                                android:gravity="center"
                                style="@style/text_view_title_right"
                                />
                            <ImageView
                                android:id="@+id/tv_remove_carton"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/minus_red" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linBasteh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layoutDirection="rtl"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tv_add_basteh"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/plus_green" />



                            <com.saphamrah.customer.utils.customViews.EditTextWatcher
                                android:id="@+id/tv_quantity_basteh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:inputType="number"
                                android:hint="@string/carton"
                                android:textStyle="bold"
                                android:text="100"
                                android:gravity="center"
                                style="@style/text_view_title_right"
                                />
                            <ImageView
                                android:id="@+id/tv_remove_basteh"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/minus_red" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lin_adad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layoutDirection="rtl"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tv_add_adad"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/plus_green" />



                            <com.saphamrah.customer.utils.customViews.EditTextWatcher
                                android:id="@+id/tv_quantity_adad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:inputType="number"
                                android:hint="@string/carton"
                                android:textStyle="bold"
                                android:text="100"
                                android:gravity="center"
                                style="@style/text_view_title_right"
                                />
                            <ImageView
                                android:id="@+id/tv_remove_adad"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/minus_red" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
</LinearLayout>
