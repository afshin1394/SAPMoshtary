<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layoutDirection="rtl">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/altdlg_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            android:layoutDirection="rtl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:id="@+id/layStatusRight"
                        android:orientation="vertical">
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/lblRadif"
                        android:gravity="center"
                        android:textSize="@dimen/FontSize20"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layoutDirection="rtl"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/iconSize24"
                                android:layout_height="@dimen/iconSize24"
                                android:src="@drawable/ic_name"
                                android:layout_gravity="center_vertical" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/lblNameAmval"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/FontSize16"
                                android:gravity="center_vertical|right"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl"
                                android:layout_marginRight="10dp"/>
                            <ImageView
                                android:layout_width="@dimen/iconSize24"
                                android:layout_height="@dimen/iconSize24"
                                android:id="@+id/imgviewStatus"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layoutDirection="rtl"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/iconSize24"
                                android:layout_height="@dimen/iconSize24"
                                android:src="@drawable/ic_masahat"
                                android:layout_gravity="center_vertical" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/abadtxt"
                                android:textColor="@color/colorTextSecondary"
                                android:textSize="@dimen/FontSize14"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical|right"
                                android:layoutDirection="rtl"
                                android:textDirection="rtl"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:id="@+id/layStatusLeft"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>