<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lnrlayRoot"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_gravity="top"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lnrlayContent"
        android:layoutDirection="rtl">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/crdviewRoot"
            android:background="@drawable/btmsheet_bg"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layoutDirection="rtl">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblCodeNameCustomer"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/FontSize14"
                    android:gravity="center_vertical|right"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_person_card_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblNameForoshandeh"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/FontSize14"
                    android:gravity="center_vertical|right"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_seller"
                    app:layout_constraintTop_toBottomOf="@id/lblCodeNameCustomer"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/lblCountFaktor"
                    app:layout_constraintBottom_toTopOf="@id/layCustomerImage"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblCountFaktor"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/FontSize14"
                    android:gravity="bottom"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_abacus"
                    app:layout_constraintRight_toLeftOf="@id/lblNameForoshandeh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recyclerView"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:id="@+id/layCustomerImage"
                    app:cardCornerRadius="@dimen/btnCornerRadius"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblNameForoshandeh"
                    app:layout_constraintBottom_toTopOf="@id/layActions"
                    app:layout_constraintLeft_toRightOf="@id/recyclerView">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgCustomer"
                        android:src="@drawable/board"
                        android:scaleType="fitXY"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/layInfo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/layActions" />
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/lblPriority"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/FontSize26"
                        android:background="@drawable/green_circle_two"
                        android:gravity="center"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/recyclerView"
                    app:layout_constraintRight_toLeftOf="@id/layCustomerImage"
                    app:layout_constraintTop_toBottomOf="@id/lblNameForoshandeh"
                    app:layout_constraintBottom_toTopOf="@id/layActions"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                </androidx.recyclerview.widget.RecyclerView>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/imgNextFaktor"
                    android:src="@drawable/ic_previous"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/layActions"
                    app:layout_constraintTop_toBottomOf="@id/lblCountFaktor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/layActions"
                    android:orientation="horizontal"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/imgSendLocation"
                        android:src="@drawable/ic_change_pin"
                        android:padding="5dp"
                        android:background="@color/colorBackSendDataSwipe"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/imgRoute"
                        android:src="@drawable/ic_route"
                        android:padding="5dp"
                        android:background="@color/colorBackRoute"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/imgShowFaktorImage"
                        android:src="@drawable/ic_capturedarkhast"
                        android:padding="5dp"
                        android:background="@color/colorBackSendDataSwipe"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/imgFaktorDetail"
                        android:src="@drawable/ic_show_faktor_detail"
                        android:padding="5dp"
                        android:background="@color/colorBackShowCustomerLocationSwipe"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/imgEditDarkhast"
                        android:src="@drawable/ic_darkhastkala"
                        android:padding="5dp"
                        android:background="@color/colorFabHelp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/imgMarjoee"
                        android:src="@drawable/ic_marjoee"
                        android:padding="5dp"
                        android:background="@color/colorSliderCustomers"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/imgClearingTreasury"
                        android:src="@drawable/ic_vosol"
                        android:padding="5dp"
                        android:background="@color/colorDivider"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/imgSendTreasury"
                        android:src="@drawable/ic_send"
                        android:padding="5dp"
                        android:background="@color/colorBackSendDataSwipe"/>
                    <ImageView
                        android:id="@+id/imgElatAdamTahvil"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_odatdarkhast"
                        android:background="@color/colorNotDelivered"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
