<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MVP.View.AddCustomerDocsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layTitle"
        android:layoutDirection="rtl"
        android:background="@color/colorPrimary"
        android:padding="@dimen/paddingTitle"
        android:elevation="@dimen/elevationActivityTitle"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="@dimen/imgActivityTitle"
            android:layout_height="@dimen/imgActivityTitle"
            android:id="@+id/imgBack"
            android:src="@drawable/ic_back"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblActivityTitle"
            android:text="@string/docs"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/lblActivityTitle"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/crdviewNationalCode"
        android:layout_margin="10dp"
        app:cardCornerRadius="@dimen/btnCornerRadius"
        app:cardElevation="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/imgNationalCard"
                android:src="@drawable/ic_national_card_doc"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/txtSelectNationalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgNationalCard"
                android:text="@string/selectNationalCard"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblSelectNationalCodeCamera"
                android:text="@string/selectCamera"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/lblSelectNationalCodeGallery"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/transparent_bg_text_primary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblSelectNationalCodeGallery"
                android:text="@string/selectGallery"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/lblSelectNationalCodeCamera"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/transparent_bg_text_primary"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/crdviewJavazeKasb"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="@dimen/btnCornerRadius"
        app:cardElevation="15dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/imgJavazeKasb"
                android:src="@drawable/ic_javaze_kasb"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/txtSelectJavazeKasb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgJavazeKasb"
                android:text="@string/selectJavazKasb"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblSelectJavazeKasbCamera"
                android:text="@string/selectCamera"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/lblSelectJavazeKasbGallery"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/transparent_bg_text_primary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblSelectJavazeKasbGallery"
                android:text="@string/selectGallery"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/lblSelectJavazeKasbCamera"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/transparent_bg_text_primary"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/crdviewDasteCheck"
        app:cardCornerRadius="@dimen/btnCornerRadius"
        app:cardElevation="15dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/imgDasteCheck"
                android:src="@drawable/ic_check_book"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/txtSelectDasteCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgDasteCheck"
                android:text="@string/selectDasteCheck"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblSelectDasteCheckCamera"
                android:text="@string/selectCamera"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/lblSelectDasteCheckGallery"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/transparent_bg_text_primary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblSelectDasteCheckGallery"
                android:text="@string/selectGallery"
                android:textSize="@dimen/FontSize18"
                android:textColor="@color/colorTextPrimary"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/lblSelectDasteCheckCamera"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/transparent_bg_text_primary"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>