                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
