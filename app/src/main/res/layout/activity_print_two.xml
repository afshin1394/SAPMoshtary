                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/txtMablaghNakhalesFaktor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/lblMablaghNakhalesFaktor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:text="جمع درخواست : "
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/RialMablaghTakhfif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="ریال"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/txtMablaghTakhfif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/lblMablaghTakhfif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:text="مبلغ تخفیف درخواست : "
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/RialMablaghMarjoee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="ریال"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/txtMablaghMarjoee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/lblMablaghMarjoee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:text="مبلغ مرجوعی درخواست : "
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layArzeshAfzoode"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/RialMablaghArzeshAfzoode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="ریال"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/txtMablaghArzeshAfzoode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/lblMablaghArzeshAfzoode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:text="مبلغ مالیات ارزش افزوده درخواست : "
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/RialMablaghFaktor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="ریال"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/txtMablaghFaktor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:textSize="@dimen/_18ssp"
