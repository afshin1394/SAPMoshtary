<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lnrlayRoot"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="top"
    android:gravity="top">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/crdviewRoot"
        android:background="@drawable/btmsheet_bg"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layoutDirection="rtl">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.saphamrah.CustomView.CustomTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtinputBrand"
                android:layout_margin="10dp"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:theme="@style/TextInputLayoutTheme">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBrand"
                    android:drawableLeft="@drawable/ic_arrow_down"
                    android:drawableRight="@drawable/ic_products"
                    android:drawablePadding="@dimen/drawableRightEditTextPadding"
                    android:editable="false"
                    android:hint="@string/brand"
                    android:inputType="none"
                    android:maxLines="1"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorDivider"
                    android:textSize="@dimen/FontSize16" />
            </com.saphamrah.CustomView.CustomTextInputLayout>

            <com.saphamrah.CustomView.CustomTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtinputGoroh"
                android:layout_margin="10dp"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:theme="@style/TextInputLayoutTheme">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtGoroh"
                    android:drawableLeft="@drawable/ic_arrow_down"
                    android:drawableRight="@drawable/ic_products"
                    android:drawablePadding="@dimen/drawableRightEditTextPadding"
                    android:editable="false"
                    android:hint="@string/gorohKala"
                    android:inputType="none"
                    android:maxLines="1"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorDivider"
                    android:textSize="@dimen/FontSize16" />
            </com.saphamrah.CustomView.CustomTextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnApplyFilter"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="@string/apply"
                android:textColor="@color/colorWhite"
                android:padding="10dp"
                android:textSize="@dimen/btnFontMain" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>