<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4sdp"
    android:layoutDirection="rtl"
    android:background="@android:color/transparent"
    android:layout_gravity="center"
    android:elevation="@dimen/_120sdp"
    android:layout_marginLeft="@dimen/_6sdp"
    android:layout_marginRight="@dimen/_6sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_add"
            android:layout_width="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/plus_green" />



        <com.saphamrah.customer.utils.customViews.EditTextWatcher
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/carton"
            android:gravity="center"
            style="@style/text_view_title_right_large_screen"
            />
        <ImageView
            android:id="@+id/tv_remove"
            android:layout_width="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/minus_red" />

    </LinearLayout>
</LinearLayout>