<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.createRequest.cart.view.fragment.CartFragment">

    <LinearLayout
        android:id="@+id/lin_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_125sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/purchase_light_background"
            android:elevation="@dimen/_12sdp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                style="@style/text_view_title_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/cart" />


            <ImageView
                android:id="@+id/img_marjoee"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_marjoee"
                />





            <ImageView
                android:id="@+id/img_trash"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_trash_3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/sv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:background="@drawable/rounded_corner_top_red_gradiant"
                        android:orientation="vertical"
                        android:layoutDirection="rtl"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/text_view_title_center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address" />
                        <View
                            style="@style/devider_gray"/>
                        <Spinner
                            android:id="@+id/spinner_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/rounded_corner_top_red_gradiant"
                        android:id="@+id/lin_vosol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:layoutDirection="rtl"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_view_title_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/vosol" />
                        <View style="@style/devider_gray"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_receipt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/_4sdp"
                                android:spinnerMode="dropdown" />

                            <View
                                style="@style/devider_gray"
                                android:layout_width="1dp"
                                android:layout_height="match_parent" />




                                <com.saphamrah.customer.utils.customViews.EditTextWatcher
                                    android:id="@+id/etv_receipt_duration"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/modatVosol"
                                    android:maxLines="1"
                                    android:inputType="number"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textColorHint="@color/colorDivider"
                                    android:textSize="@dimen/fontSizeSelectBonus" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RV_ordered_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:layoutDirection="rtl"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/_6sdp" />


                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/lin_bonus_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lin_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/tv_discount_title"
                            style="@style/text_view_title_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/discount" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/RV_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_margin="@dimen/_6sdp"
                            android:layoutDirection="rtl"
                            android:padding="@dimen/_6sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lin_bonus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            style="@style/text_view_title_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bonus" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/RV_bonus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_margin="@dimen/_6sdp"
                            android:layoutDirection="rtl"
                            android:padding="@dimen/_6sdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lin_selectable_bonus"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            style="@style/text_view_title_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/selectableBonus" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/RV_selectable_bonus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_margin="@dimen/_6sdp"
                            android:layoutDirection="rtl"
                            android:padding="@dimen/_6sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lin_return"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            style="@style/text_view_title_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/marjoee" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/RV_return"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false"
                            android:layout_margin="@dimen/_6sdp"
                            android:layoutDirection="rtl"
                            android:padding="@dimen/_6sdp" />


                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/btm_sht_purchase"
        layout="@layout/payment_bottom_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>