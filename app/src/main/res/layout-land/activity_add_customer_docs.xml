<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MVP.View.AddCustomerDocsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layTitle"
        android:layoutDirection="rtl"
        android:background="@color/colorPrimary"
        android:padding="@dimen/paddingTitle"
        android:elevation="@dimen/elevationActivityTitle"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="@dimen/imgActivityTitle"
            android:layout_height="@dimen/imgActivityTitle"
            android:id="@+id/imgBack"
            android:src="@drawable/ic_back"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblActivityTitle"
            android:text="@string/docs"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/lblActivityTitle"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/crdviewNationalCode"
            android:layout_margin="15dp"
            app:cardCornerRadius="@dimen/btnCornerRadius"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imgNationalCard"
                    android:src="@drawable/ic_national_card_doc"
                    android:padding="@dimen/FontSize18"
                    android:layout_above="@+id/lblSelectNationalCode"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSelectNationalCode"
                    android:text="@string/selectNationalCard"
                    android:textSize="@dimen/FontSize18"
                    android:textColor="@color/colorTextPrimary"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/transparent_bg_text_primary"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/crdviewJavazeKasb"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="@dimen/btnCornerRadius"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imgJavazeKasb"
                    android:src="@drawable/ic_javaze_kasb"
                    android:padding="@dimen/FontSize18"
                    android:layout_above="@+id/lblSelectJavazeKasb"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSelectJavazeKasb"
                    android:text="@string/selectJavazKasb"
                    android:textSize="@dimen/FontSize18"
                    android:textColor="@color/colorTextPrimary"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/transparent_bg_text_primary"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:id="@+id/crdviewDasteCheck"
            app:cardCornerRadius="@dimen/btnCornerRadius"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imgDasteCheck"
                    android:src="@drawable/ic_check_book"
                    android:padding="@dimen/FontSize18"
                    android:layout_above="@+id/lblSelectDasteCheck"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSelectDasteCheck"
                    android:text="@string/selectDasteCheck"
                    android:textSize="@dimen/FontSize18"
                    android:textColor="@color/colorTextPrimary"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/transparent_bg_text_primary"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>