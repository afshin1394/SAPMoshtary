<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainConstraintLandScape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nestedScrollViewMainFragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">




<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdtp_white"
    >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStartScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.0" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEndScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineHalfScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/constraint1MainFrag"
        android:textColor="@android:color/white"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toTopOf="@id/constraint2MainFrag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >




        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline48HorizontalScreen"
            app:layout_constraintGuide_percent="0.48"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline52HorizontalScreen"
            app:layout_constraintGuide_percent="0.52"
            android:orientation="vertical"></androidx.constraintlayout.widget.Guideline>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline48Screen"
            app:layout_constraintGuide_percent="0.90"
            android:orientation="horizontal"></androidx.constraintlayout.widget.Guideline>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline52Screen"
            app:layout_constraintGuide_percent="0.95"
            android:orientation="horizontal"></androidx.constraintlayout.widget.Guideline>

        <ImageView
            android:id="@+id/imgDayTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/midday"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCurrentDate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline52HorizontalScreen"
            app:layout_constraintLeft_toLeftOf="@id/guideline48HorizontalScreen"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"

            android:padding="10dp"
            android:background="@drawable/textview_bg_bottom_round"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblDayTime"
            app:layout_constraintBottom_toBottomOf="@id/guideline48Screen"
            app:layout_constraintTop_toTopOf="@id/guideline52Screen"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/textview_bg_left_round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTemperature"
            app:layout_constraintBottom_toBottomOf="@id/guideline48Screen"
            app:layout_constraintTop_toTopOf="@id/guideline52Screen"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/mainFragmentDateTimeWeatherFontSize"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/textview_bg_right_round"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constraint2MainFrag"
        android:background="@color/mdtp_white"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/constraint1MainFrag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >



        <androidx.viewpager.widget.ViewPager
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/view_pager_mainFrag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

