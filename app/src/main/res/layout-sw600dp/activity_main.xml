        app:bbn_entries="@menu/main_menu"
        app:bbn_scrollEnabled="true"
        app:bbn_badgeProvider="@string/bbn_badgeProvider"
        app:layout_behavior="@string/bbn_tablet_view_behavior" />-->


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="rtl" />

    <devlight.io.library.ntb.NavigationTabBar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/navigationTabBar"
        android:layout_gravity="bottom"
        app:ntb_animation_duration="200"
        app:ntb_preview_colors="@array/addCustomerNavigationTabBarColors"
        app:ntb_corners_radius="0dp"
        app:ntb_active_color="@color/colorWhite"
        app:ntb_inactive_color="@color/colorDivider"
        app:ntb_titled="true"
        app:ntb_scaled="true"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_badge_position="right"
        app:ntb_badge_gravity="top"
        app:ntb_badge_bg_color="#ffff0000"
        app:ntb_badge_title_color="@color/colorWhite"
        app:ntb_badge_use_typeface="true"
        app:ntb_swiped="true"
        app:ntb_bg_color="#000000"
        app:ntb_icon_size_fraction="0.5"
        app:ntb_title_size="15dp"
        android:layoutDirection="rtl"/>

</LinearLayout>