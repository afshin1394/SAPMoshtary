<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MVP.View.MainActivity"
    android:layoutDirection="rtl">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarlayout"
        app:elevation="0dp"
        android:layoutDirection="rtl">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:layoutDirection="rtl">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layMenu"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/toolbarContentHeight"
                        android:layout_height="@dimen/toolbarContentHeight"
                        android:id="@+id/imgMenu"
                        android:src="@drawable/ic_menu"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name_fa"
                        android:textSize="@dimen/toolbarContentHeight"
                        android:textColor="@color/colorWhite"
                        android:layout_toLeftOf="@+id/imgMenu"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/layMessageBox"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_message"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="7dp"/>
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/imgviewUnreadCount"
                        android:src="@drawable/red_circle"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="3dp"
                        android:visibility="invisible"/>
                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/lblUnreadMessageCount"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:layout_marginRight="3dp"
                        android:visibility="invisible"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgCustomerSupport"
                    android:src="@drawable/ic_customer_support"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/layMessageBox"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgHelp"
                    android:src="@drawable/ic_question"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imgCustomerSupport"
                    android:layout_marginLeft="20dp" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


<!--    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbarlayout" />-->


    <!--<it.sephiroth.android.library.bottomnavigation.BottomNavigation
