<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_top_red_gradiant"
    android:layoutDirection="rtl"
    android:maxHeight="370dp"
    android:orientation="horizontal"
    app:behavior_hideable="false"
    app:behavior_peekHeight="160dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/triangle_red_gradiant_shape"


        >
        <ImageView

            android:id="@+id/arrow_down_bottom_sheet"
            android:layout_width="40dp"
            android:layout_height="@dimen/_18sdp"
            android:elevation="@dimen/_360sdp"
            android:src="@drawable/ic_arrow_up"
            android:padding="@dimen/_1sdp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">


            <TextView
                android:id="@+id/txt_payment_sum"
                style="@style/text_view_title_center_large_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text=" قابل پرداخت\n 12,000,120 ریال" />


            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:visibility="gone"
                    android:id="@+id/shimmer_purchase"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corner_purchase_red_dark_gradiant"

                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/download"
                            android:visibility="gone"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/loading_button"
                            app:lottie_autoPlay="true"
                            />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:id="@+id/lin_purchase"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/rounded_corner_purchase_red_dark_gradiant"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lottie_loading_payment"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/download"
                        android:visibility="gone"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/loading_button"
                        app:lottie_autoPlay="true"
                        />

                    <TextView
                        android:id="@+id/tv_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calculateBonusDiscount"
                        style="@style/text_view_title_center_large_screen"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_details_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_production_date"
                    style="@style/text_view_normal2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sum" />

                <TextView
                    android:id="@+id/txt_expiration_date"
                    style="@style/text_view_normal2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 25,000,120ریال" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_sell_price"
                    style="@style/text_view_normal2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/takhfifFaktor" />

                <TextView
                    android:id="@+id/txt_inventory"
                    style="@style/text_view_normal2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="21.235ریال" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_bach_number"
                    style="@style/text_view_normal2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mashmolMaliatAvarez" />

                <TextView
                    style="@style/text_view_normal2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</FrameLayout>
