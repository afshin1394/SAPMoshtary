<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
    </style>


    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_theme</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlActivated">@color/colorTextPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


    <style name="menu_labels_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>


    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">@color/colorListHeaderBackground</item>
        <!-- Change voice icon-->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>
        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@drawable/ic_close</item>
        <!-- Change up icon-->
        <item name="searchBackIcon">@drawable/ic_back_black</item>
        <!-- Change icon for the suggestions-->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>
        <!-- Change background for the suggestions list view-->
        <item name="searchSuggestionBackground">@color/colorPrimary</item>
        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">@color/colorTextPrimary</item>
        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">@color/colorTextPrimary</item>
        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>
    </style>




    <style name="My.Widget.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorPrimary">@color/colorPurple200</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPurple200</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAmber200</item>
    </style>

    <!--print styles-->
    <style name="txt_print_header_main">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_26ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_print_header_main_large">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_26ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_print_header">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_print_header_large">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_print">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_print_large">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_print_detail">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_print_detail_large">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
