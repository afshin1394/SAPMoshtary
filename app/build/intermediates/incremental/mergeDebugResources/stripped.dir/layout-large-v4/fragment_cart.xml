<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.createRequest.cart.view.fragment.CartFragment">

    <LinearLayout
        android:layout_marginBottom="@dimen/_135sdp"
        android:id="@+id/lin_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/purchase_light_background"
            android:elevation="@dimen/_12sdp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <TextView
                style="@style/text_view_title_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/cart" />

            <ImageView
                android:id="@+id/img_trash"
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_trash_3" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ScrollView
                android:id="@+id/sv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/lin_vosol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:layoutDirection="rtl"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_view_title_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vosol" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/reverse_bordered_cardview"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_receipt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/_4sdp"
                                android:spinnerMode="dropdown" />

                            <View
                                style="@style/devider_gray"
                                android:layout_width="1dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tv_receipt_duration"
                                style="@style/text_view_normal2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/modatVosol" />
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RV_ordered_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_6sdp"
                        />


                    <LinearLayout
                        android:id="@+id/lin_bonus_discount"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/tv_discount_title"
                            style="@style/text_view_title_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/discount" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/RV_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_6sdp"
                            android:layoutDirection="rtl"
                            android:padding="@dimen/_6sdp" />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            style="@style/text_view_title_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bonus" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/RV_bonus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_6sdp"
                            android:layoutDirection="rtl"
                            android:padding="@dimen/_6sdp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
    <include    android:id="@+id/btm_sht_purchase" layout="@layout/payment_bottom_sheet"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>