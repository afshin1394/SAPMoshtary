<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:viewBindingIgnore="true"
    android:layout_gravity="top|center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorBlack"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/root_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sample_gradient_three">

            <ImageView
                android:id="@+id/card_hologram"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sim" />

            <TextView
                android:id="@+id/number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical|left"
                android:layoutDirection="rtl"
                android:text="6596 3028 4593 5489"
                android:textColor="@color/bg_screen"
                android:textSize="@dimen/FontSize28" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="17dp"
            android:paddingEnd="15dp"
            android:paddingBottom="17dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/namebank_tv"
                    android:textColor="@color/colorGrey300"
                    android:textSize="@dimen/FontSize18"
                    android:gravity="center_vertical|right"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:text="بانک ملت"
                    android:drawableStart="@drawable/ic_round_account_balance_24_grey"
                    android:fontFamily="@font/iransans"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/type_tv"
                    android:textSize="@dimen/FontSize16"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorGrey300"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:text="حساب جاری"
                    android:drawableStart="@drawable/ic_round_category_24"
                    android:fontFamily="@font/iransans"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>