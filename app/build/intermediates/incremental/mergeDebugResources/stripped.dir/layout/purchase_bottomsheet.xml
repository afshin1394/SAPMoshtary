<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_bottom_sheet"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/_120sdp"
    android:maxHeight="@dimen/_570sdp"
    android:elevation="@dimen/_120sdp"
    android:background="@drawable/rounded_corner_top_red_gradiant"
    android:layoutDirection="rtl"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_product_name"
            style="@style/text_view_title_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="بستنی ماستی" />

        <TextView
            android:id="@+id/txt_consumer_price"
            style="@style/text_view_normal2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="قیمت مصرف کننده: 2000ریال" />


    </LinearLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
           >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/lin_purchaseCount"
                    android:layout_width="@dimen/_144sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/rounded_corner_background"
                    android:elevation="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/add_to_cart"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/add_product" />

                    <com.saphamrah.customer.utils.customViews.EditTextWatcher
                        android:id="@+id/TV_count"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:gravity="center|top"
                        android:inputType="number"
                        android:padding="@dimen/_6sdp"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/remove_from_cart"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:src="@drawable/sharp_remove_black_36" />


                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_24sdp"
                    android:src="@drawable/ic_trash_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_purchase"
                android:layout_width="@dimen/_144sdp"
                android:layout_height="@dimen/_36sdp"

                android:layout_gravity="center"
                android:background="@drawable/rounded_corner_purchase_red_dark_gradiant"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="افزودن به سبد خرید"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>
        </FrameLayout>


        <LinearLayout
        android:id="@+id/lin_details_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_production_date"
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />

            <TextView
                android:id="@+id/txt_expiration_date"
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sell_price"
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />

            <TextView
                android:id="@+id/txt_inventory"
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_bach_number"
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />

            <TextView
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />

            <TextView
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />

            <TextView
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />

            <TextView
                style="@style/text_view_normal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tarikhTolid" />
        </LinearLayout>
    </LinearLayout>




    </LinearLayout>

